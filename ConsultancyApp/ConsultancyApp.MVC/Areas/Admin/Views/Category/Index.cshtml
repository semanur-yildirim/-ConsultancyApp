@model List<CategoryViewModel>

<div class="mt-5 ms-5 me-5">
    <div class="d-flex justify-content-between">
        <h4>Psikolog Listesi</h4>
        <a class="btn btn-success mb-2" asp-area="Admin" asp-controller="Category" asp-action="Create">Yeni Kayıt</a>
    </div>
    <table id="myDataTable" class="table table-bordered table-sm">
        <thead class="bg-label-success">
            <tr>
                <th width="50">Id</th>
                <th>Kategori Adı</th>
                <th width="130">Psikologlar</th>
                <th width="130">Onaylı?</th>
                <th width="180">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr class="text-center">
                    <td class="align-middle">@c.Id</td>
                    <td class="align-middle">@c.Name</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Psychologist" asp-action="GetPsychologistByCustomer" asp-route-id="@c.Id">
                            @c.Psychologists.Count()
                        </a>
                    </td>

                    <td>
                        <form id="form-is-home_@c.Id"
                          asp-area="Admin"
                          asp-controller="Category"
                          asp-action="UpdateIsHome"
                          asp-route-id="@c.Id">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" asp-for=@c.IsApproved onchange="document.getElementById('form-is-home_@c.Id').submit();">
                            </div>
                        </form>
                    </td>
                    <td class="d-flex justify-content-around">
                        <a class="btn-warning py-1 pe-3 ps-3"
                       asp-area="Admin"
                       asp-controller="Category"
                       asp-action="Edit"
                       asp-route-id="@c.Id">
                            Düzenle
                        </a>

                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal_@c.Id">
                            Sil
                        </button>
                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal_@c.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">

                                            <div class="col-4">
                                                <span>@c.Name</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                                        <a class="btn-danger py-1 pe-3 ps-3"
                                       asp-area="Admin"
                                       asp-controller="Category"
                                       asp-action="Delete"
                                       asp-route-id="@c.Id">
                                            Sil
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Styles{
    @await Html.PartialAsync("_DataTablesStylesPartialView")
    }
@section Scripts{
    @await Html.PartialAsync("_DataTablesScriptsPartialView")
    }
