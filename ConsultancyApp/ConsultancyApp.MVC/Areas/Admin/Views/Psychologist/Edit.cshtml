@model PsychologistUpdateViewModel
@{
    var userTypeList = Enum.GetValues(typeof(EnumType));
}
<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <div class="col-md-12">
                <form asp-area="Admin"
                      asp-controller="Psychologist"
                      asp-action="Edit"
                      method="post">
                    <div class="card mb-4">
                        <h5 class="card-header">Profil Detay</h5>
                        <!-- Account -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-4">
                                    <div class="d-flex flex-column gap-4">
                                        <img src="~/image/psychologist/@Model.Image.Url"
                                             alt="@Model.Name"
                                             class="d-block rounded ms-4"
                                             height="170"
                                             width="170"
                                             id="uploadedAvatar" />
                                        <div class="button-wrapper">

                                            <input type="file"
                                                   asp-for="File"
                                                   class="form-control"
                                                   accept="image/"
                                                   style="width:250px" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-8">

                                    <div class="row">
                                        <div class="col-4">
                                            <h2>Kategori</h2>
                                            @foreach (var category in Model.Categories)
                                            {
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="SelectedCategories" value="@category.Id" @if (Model.SelectedCategories != null)
                                                    {
                                                        @(Model.SelectedCategories.Any(sc => sc == category.Id) ? "checked" : "")
                                                    } />
                                                    <label class="form-check-label">@category.Name</label>
                                                </div>
                                            }
                                        </div>

                                        <div class="col-3">
                                            <h2>Roller</h2>
                                            @foreach (var item in userTypeList)
                                            {
                                                <div>
                                                    <input class="form-check-input" type="radio" asp-for="User.Type" value="@item" />
                                                    <label class="form-check-label" asp-for="User.Type">@item</label>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-3">
                                            <h2>Cinsiyet</h2>
                                            @foreach (var item in Model.GenderSelectList)
                                            {
                                                <div>
                                                    <input class="form-check-input" type="radio" asp-for="Gender" value="@item.Value" />
                                                    <label>@item.Text</label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <hr class="my-0" />
                        <div class="card-body">
                            <div class="row men-2">
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="User.FirstName"></label>
                                    <input class="form-control" asp-for="User.FirstName" />
                                    <span class="text-danger" asp-validation-for="User.FirstName"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="User.LastName"></label>
                                    <input class="form-control" asp-for="User.LastName" />
                                    <span class="text-danger" asp-validation-for="User.LastName"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="User.UserName"></label>
                                    <input class="form-control" asp-for="User.UserName" />
                                    <span class="text-danger" asp-validation-for="User.UserName"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="User.Email"></label>
                                    <input class="form-control" asp-for="User.Email" />
                                    <span class="text-danger" asp-validation-for="User.Email"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="Price"></label>
                                    <input class="form-control" asp-for="Price" value="@($"{Model.Price:N0}")" />
                                    <span class="text-danger" asp-validation-for="Price"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="Education"></label>
                                    <input class="form-control" asp-for="Education" />
                                    <span class="text-danger" asp-validation-for="Education"></span>
                                </div>
                                <div class="mb-3 col-12">
                                    <label class="form-label" asp-for="About"></label>
                                    <textarea class="form-control" asp-for="About" id="editor"></textarea>
                                    <span class="text-danger" asp-validation-for="About"></span>
                                </div>
                                <div class="mb-3 col-12">
                                    <label class="form-label" asp-for="Experience"></label>
                                    <textarea class="form-control" asp-for="Experience" id="editor2"></textarea>
                                    <span class="text-danger" asp-validation-for="Experience"></span>
                                </div>
                            </div>
                            <div class="mt-2">
                                <button type="submit" class="btn btn-primary me-2">Değişiklikleri Kaydet</button>
                                <button type="reset" class="btn btn-outline-secondary">Vazgeç</button>
                            </div>
                        </div>
                </form>

                    <!-- /Account -->
                </div>
                <div class="card">
                    <h5 class="card-header">Sil</h5>
                    <div class="card-body">
                        <div class="mb-3 col-12 mb-0">
                            <div class="alert alert-warning">
                                <h6 class="alert-heading fw-bold mb-1">Silmek istedğinizden emin misiniz?</h6>
                            </div>
                        </div>
                        <form id="formAccountDeactivation" onsubmit="return false">
                            <div class="form-check mb-3">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="accountActivation"
                                       id="accountActivation" />
                                <label class="form-check-label" for="accountActivation">I confirm my account deactivation</label>
                            </div>
                            <button type="submit" class="btn btn-danger deactivate-account">Deactivate Account</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- / Content -->

    <div class="content-backdrop fade"></div>
</div>
<!-- Content wrapper -->
@section Styles{
    <script src="//cdn.ckeditor.com/4.21.0/full/ckeditor.js"></script>
}
@section Scripts{
    <script>
        CKEDITOR.replace('editor', {
            toolbar: [
                { name: 'colors', items: ['TextColor', 'BGColor'] },
                { name: 'styles', items: ['Format', 'Font', 'FontSize'] },
                { name: 'paraghraph', items: ['NumberedList', 'BulletedList'] }
            ]
        });
        CKEDITOR.replace('editor2', {
            toolbar: [
                { name: 'colors', items: ['TextColor', 'BGColor'] },
                { name: 'styles', items: ['Format', 'Font', 'FontSize'] },
                { name: 'paraghraph', items: ['NumberedList', 'BulletedList'] }
            ]
        });
    </script>
}

