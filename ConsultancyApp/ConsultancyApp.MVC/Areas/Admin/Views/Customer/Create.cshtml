@model CustomerAddViewModel

<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <div class="col-md-12">
                <form asp-area="Admin"
                      asp-controller="Customer"
                      asp-action="Create"
                      method="post"
                      enctype="multipart/form-data">
                    <div class="card mb-4">
                        <h5 class="card-header">Yeni Kayıt</h5>
                        <hr class="my-0" />
                        <div class="card-body">
                            <div class="row men-2">
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="User.FirstName"></label>
                                    <input class="form-control" asp-for="User.FirstName" />
                                    <span class="text-danger" asp-validation-for="User.FirstName"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="User.LastName"></label>
                                    <input class="form-control" asp-for="User.LastName" />
                                    <span class="text-danger" asp-validation-for="User.LastName"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="Name"></label>
                                    <input class="form-control" asp-for="Name" />
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="User.UserName"></label>
                                    <input class="form-control" asp-for="User.UserName" />
                                    <span class="text-danger" asp-validation-for="User.UserName"></span>
                                </div>
                                <div class=" mb-0 col-md-6">
                                    <input class="form-control" asp-for="User.Password">
                                    <label class="form-label" asp-for="User.Password"></label>
                                    <span class="text-danger" asp-validation-for="User.Password"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="User.Email"></label>
                                    <input class="form-control" asp-for="User.Email" />
                                    <span class="text-danger" asp-validation-for="User.Email"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="Address"></label>
                                    <input class="form-control" asp-for="Address" />
                                    <span class="text-danger" asp-validation-for="Address"></span>
                                </div>
                                <div class="mb-3 ms-3 form-check">
                                    <input type="checkbox" class="form-check-input" asp-for="User.EmailConfirmed">
                                    <label class="form-check-label" asp-for="User.EmailConfirmed"></label>
                                </div>
                                <div class="mb-3 form-check ms-3">
                                    <input type="checkbox" class="form-check-input" asp-for="IsApproved">
                                    <label class="form-check-label" asp-for="IsApproved"></label>
                                </div>
                                <div class="mb-3 ">
                                    <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                                    <button type="reset" class="btn btn-outline-secondary">Vazgeç</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>

                <!-- /Account -->
            </div>

        </div>
    </div>
</div>
<!-- / Content -->
<!-- Content wrapper -->
@section Styles{
    <script src="//cdn.ckeditor.com/4.21.0/full/ckeditor.js"></script>
}
@section Scripts{
    <script>
        CKEDITOR.replace('editor', {
            toolbar: [
                { name: 'colors', items: ['TextColor', 'BGColor'] },
                { name: 'styles', items: ['Format', 'Font', 'FontSize'] },
                { name: 'paraghraph', items: ['NumberedList', 'BulletedList'] }
            ]
        });
        CKEDITOR.replace('editor2', {
            toolbar: [
                { name: 'colors', items: ['TextColor', 'BGColor'] },
                { name: 'styles', items: ['Format', 'Font', 'FontSize'] },
                { name: 'paraghraph', items: ['NumberedList', 'BulletedList'] }
            ]
        });
    </script>
}