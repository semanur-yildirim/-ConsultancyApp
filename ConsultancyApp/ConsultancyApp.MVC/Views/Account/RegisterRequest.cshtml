@model RequestRegisterModel
<!-- Content wrapper -->
<div class="content-wrapper margintop container">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y  rounded">
        <div class="row">
            <div class="col-md-12">
                <form asp-area=""
                      asp-controller="Account"
                      asp-action="RegisterRequest"
                      method="post"
                      enctype="multipart/form-data">
                    @* <input  type="hidden" asp-for="@EnumType.Psychologist"/>*@
                    <div class="card mb-4 bg-light">
                        <h5 class="card-header fw-bold text-center fs-3">Yeni Kayıt</h5>
                        <!-- Account -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-4">
                                    <div class="d-flex flex-column gap-4">

                                        <div class="button-wrapper">

                                            <input type="file"
                                                   asp-for="Image"
                                                   class="form-control"
                                                   accept="image/"
                                                   style="width:250px" />
                                            <span class="text-danger" asp-validation-for="Image"></span>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-8">

                                    <div class="row">
                                        <div class="col-4">
                                            <h3>Kategori</h3>
                                            @foreach (var category in Model.Categories)
                                            {
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="SelectedCategories" value="@category.Id" @if (Model.SelectedCategories != null)
                                                    {
                                                        @(Model.SelectedCategories.Any(sc => sc == category.Id) ? "checked" : "")
                                                    } />
                                                    <label class="form-check-label">@category.Name</label>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-3">
                                            <h3>Cinsiyet</h3>
                                            <div class="mb-3">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" asp-for="Gender" value="Kadın" checked>
                                                    <label class="form-check-label" for="female">
                                                        Kadın
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" asp-for="Gender" value="Erkek">
                                                    <label class="form-check-label" for="male" value="Erkek">
                                                        Erkek
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" asp-for="Gender" value="Diger" checked>
                                                    <label class="form-check-label" for="other">
                                                        Kadın
                                                    </label>
                                                </div>
                                                <span class="text-danger" asp-validation-for="Gender"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <hr class="my-0" />
                        <div class="card-body">
                            <div class="row men-2">
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="User.FirstName"></label>
                                    <input class="form-control" asp-for="User.FirstName" />
                                    <span class="text-danger" asp-validation-for="User.FirstName"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="User.LastName"></label>
                                    <input class="form-control" asp-for="User.LastName" />
                                    <span class="text-danger" asp-validation-for="User.LastName"></span>
                                </div>

                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="User.UserName"></label>
                                    <input class="form-control" asp-for="User.UserName" />
                                    <span class="text-danger" asp-validation-for="User.UserName"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="User.Password"></label>
                                    <input class="form-control" asp-for="User.Password" />
                                    <span class="text-danger" asp-validation-for="User.Password"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="User.RePassword"></label>
                                    <input class="form-control" asp-for="User.RePassword" />
                                    <span class="text-danger" asp-validation-for="User.RePassword"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="User.Email"></label>
                                    <input class="form-control" asp-for="User.Email" />
                                    <span class="text-danger" asp-validation-for="User.Email"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="Price"></label>
                                    <input class="form-control" asp-for="Price" value="@($"{Model.Price:N0}")" />
                                    <span class="text-danger" asp-validation-for="Price"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="Education"></label>
                                    <input class="form-control" asp-for="Education" />
                                    <span class="text-danger" asp-validation-for="Education"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="GraduationYear"></label>
                                    <input class="form-control" asp-for="GraduationYear" />
                                    <span class="text-danger" asp-validation-for="GraduationYear"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="User.DateOfBirth"></label>
                                    <input class="form-control" asp-for="User.DateOfBirth" />
                                    <span class="text-danger" asp-validation-for="User.DateOfBirth"></span>
                                </div>
                                <div class="mb-3 col-12">
                                    <label class="form-label" asp-for="About"></label>
                                    <textarea class="form-control" asp-for="About" id="editor"></textarea>
                                    <span class="text-danger" asp-validation-for="About"></span>
                                </div>
                                <div class="mb-3 col-12">
                                    <label class="form-label" asp-for="Experience"></label>
                                    <textarea class="form-control" asp-for="Experience" id="editor2"></textarea>
                                    <span class="text-danger" asp-validation-for="Experience"></span>
                                </div>
                                <div class="mb-3 text-center ">
                                    <button type="submit" class="btn btn-success me-2 w-25">Kaydet</button>
                                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary">Vazgeç</a>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>

                <!-- /Account -->
            </div>

        </div>
    </div>
</div>
<!-- / Content -->
<!-- Content wrapper -->